########################################
# Entorno general de la API
########################################

# Entorno de ejecución: development | production | test
NODE_ENV=development

# Puerto en el que escuchará la API en local
PORT=3000


########################################
# Azure Cosmos DB
########################################

# URL de tu cuenta de Cosmos (API SQL)
# Ejemplo: https://mi-cosmos.documents.azure.com:443/
COSMOS_ENDPOINT=https://TU-COSMOS.documents.azure.com:443/

# Clave de acceso de Cosmos (NUNCA subir la real al repo)
COSMOS_KEY=REEMPLAZA_ESTA_KEY

# Nombre de la base de datos en Cosmos
COSMOS_DB_NAME=todo

# Nombre del contenedor principal de tareas
COSMOS_CONTAINER_NAME=tasks

# Nombre del contenedor de usuarios (si aplica)
COSMOS_USERS_CONTAINER_NAME=users


########################################
# JWT (tokens de autenticación)
########################################

# Secreto para firmar access tokens (obligatorio en producción)
JWT_ACCESS_SECRET=CAMBIA_ESTE_SECRET_ACCESS

# Secreto para firmar refresh tokens (obligatorio en producción)
JWT_REFRESH_SECRET=CAMBIA_ESTE_SECRET_REFRESH

# Tiempo de vida del access token (ej. 15m, 1h)
ACCESS_TOKEN_EXPIRATION=15m

# Tiempo de vida del refresh token (ej. 7d, 30d)
REFRESH_TOKEN_EXPIRATION=7d


########################################
# Seguridad adicional
########################################

# Número de rondas para bcrypt (costo de hashing de contraseñas)
BCRYPT_SALT_ROUNDS=10


########################################
# CORS (orígenes permitidos para el frontend)
########################################

# URL del frontend que puede llamar a la API desde el navegador
# Ejemplo local: http://127.0.0.1:5500
# Ejemplo GitHub Pages: https://tu-usuario.github.io
CORS_ORIGIN=http://127.0.0.1:5500
